//Tail Recursion********************************************************************************
//Suma SCALA
//----------------------------------------------------------------------------------------------
object HelloWorld{
   def main(args: Array[String]) {
      println(Factorial(5));
   }
   def Factorial(n : Int) : Int =
   {
       return FactorialV(n, 1);
   }
   def FactorialV(n : Int, a : Int) : Int =
   {
       if (n == 1)
       {
           return a; 
       }
       
       return FactorialV(n -1, n + a);
   }
}
//----------------------------------------------------------------------------------------------
//Factorial SCALA
//----------------------------------------------------------------------------------------------
object HelloWorld{
   def main(args: Array[String]) {
      println(Factorial(5));
   }
   def Factorial(n : Int) : Int =
   {
       return FactorialV(n, 1);
   }
   def FactorialV(n : Int, a : Int) : Int =
   {
       if (n == 1)
       {
           return a; 
       }
       
       return FactorialV(n -1, n * a);
   }
}
//----------------------------------------------------------------------------------------------
//Maximo comun divisor SCALA
//----------------------------------------------------------------------------------------------
object HelloWorld{
   def main(args: Array[String]) {
      println(Mcd(135, 90));
   }

   def Mcd(a : Int, b : Int) : Int =
   {
       if (b == 0)
       {
           return a; 
       }
       
       return Mcd(b, a%b);
   }
}
//----------------------------------------------------------------------------------------------
//Recursividad**********************************************************************************
//Suma JAVA
//----------------------------------------------------------------------------------------------
public class HelloWorld{

     public static void main(String []args){
        System.out.println(Sum(5));
     }
     public static int Sum(int x)
     {
         if(x == 1)
         {
             return x;
         }
         else
         {
             x = x + Sum(x-1);
             return x;
         }
     }     
}
//----------------------------------------------------------------------------------------------
//Factorial JAVA
//----------------------------------------------------------------------------------------------
public class HelloWorld{

     public static void main(String []args){
        System.out.println(Sum(5));
     }
     public static int Sum(int x)
     {
         if(x == 1)
         {
             return x;
         }
         else
         {
             x = x * Sum(x-1);
             return x;
         }
     }     
}
//----------------------------------------------------------------------------------------------
//Maximo comun divisor JAVA
//----------------------------------------------------------------------------------------------
public class HelloWorld{

     static int mcd(int a, int b) 
    { 
        if (b > 0)
        {
            int y = mcd(b, a%b);
            return y;
        }
        else
        {
            return a;
        }
        
    }
    static public void main (String[] args) 
    { 
        System.out.println(mcd(70,105));
    }     
}
//----------------------------------------------------------------------------------------------
//Iteracion*************************************************************************************
//Suma JAVA
//----------------------------------------------------------------------------------------------
public class HelloWorld{

    static public void main (String[] args) 
    { 
        int x = 0;
        for(int i = 5; i > 0; i--) 
        {
            x = x + i;
        }
        System.out.print(x);
    } 
}
//----------------------------------------------------------------------------------------------
//Factorial JAVA
//----------------------------------------------------------------------------------------------
public class HelloWorld{

    static public void main (String[] args) 
    { 
        int x = 1;
        for(int i = 5; i > 0; i--) 
        {
            x = x * i;
        }
        System.out.print(x);
    } 
}
//----------------------------------------------------------------------------------------------
//Maximo comun divisor JAVA
//----------------------------------------------------------------------------------------------
public class HelloWorld{

    static public void main (String[] args) 
    { 
        int b = 1044;
        int a = 22;
        int x;
        
         while(a > 0)
        {
	        x = a;
	        a = b % a;
	        b = x;
	    }
	        System.out.println(b);
    } 
}
